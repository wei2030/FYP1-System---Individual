@model FYP1_System___Individual.Models.Proposal
@{
    ViewData["Title"] = "Edit Proposal";
    var studentId = ViewBag.StudentId;
}

<div class="container mt-4">
    <h2 class="text-center mb-4">@ViewData["Title"]</h2>

    <div class="card shadow-sm p-4">
        <form asp-action="Edit2" method="post" enctype="multipart/form-data">
            <input type="hidden" asp-for="Id" />
            <input type="hidden" asp-for="ProjectType" />
            <input type="hidden" asp-for="StudentId" value="@studentId" />

            <div class="mb-3">
                <label asp-for="Title" class="form-label">Title</label>
                <input asp-for="Title" class="form-control" />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="ProjectType" class="form-label">Project Type</label>
                <input class="form-control" value="@Model.ProjectType" readonly />
            </div>

            <div class="mb-3">
                <label asp-for="Semester" class="form-label">Semester</label>
                <input asp-for="Semester" class="form-control" />
                <span asp-validation-for="Semester" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Session" class="form-label">Session</label>
                <input asp-for="Session" class="form-control" />
                <span asp-validation-for="Session" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label for="OnlineProposalFormFile" class="form-label">Upload Completed Online Proposal Form</label>
                <input type="file" name="OnlineProposalFormFile" class="form-control" required />
                @if (!string.IsNullOrEmpty(Model.OnlineProposalFormPath))
                {
                    <a href="@Url.Content(Model.OnlineProposalFormPath)" target"_blank" class="btn btn-link mt-1 d-block">View current uploaded form</a>
                }
            </div>

            <div class="mb-3">
                <label for="ProposalDocumentFile" class="form-label">Upload Proposal Document</label>
                <input type="file" name="ProposalDocumentFile" class="form-control" required />
                @if (!string.IsNullOrEmpty(Model.ProposalDocumentPath))
                {
                    <a href="@Url.Content(Model.ProposalDocumentPath)" target"_blank" class="btn btn-link mt-1 d-block">View current uploaded form</a>
                }
            </div>

            <div class="d-flex justify-content-start">
                <button type="submit" class="btn btn-success me-2">
                    <i class="bi bi-check-circle"></i> Sava Changes
                </button>
                <a asp-controller="Students" asp-action="Index" class="btn btn-secondary">
                    <i class="bi bi-arrow-left-circle"></i> Back
                </a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}