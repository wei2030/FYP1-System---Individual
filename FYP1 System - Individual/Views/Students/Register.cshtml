@model FYP1_System___Individual.Models.Student
@{
    ViewData["Title"] = "Student Registration";
}

<div class="container mt-5">
    <h2 class="mb-4 text-center">@ViewData["Title"]</h2>

    <div class="card p-4 shadow-sm">
        <form asp-action="Register" method="post">
            <input type="hidden" asp-for="Role" value="Student" />

            <div class="mb-3">
                <label asp-for="Name" class="form-label">Name</label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Email" class="form-label">Email</label>
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Password" class="form-label">Password</label>
                <input asp-for="Password" class="form-control" type="password" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="ProgramId" class="form-label">Academic Program</label>
                <select asp-for="ProgramId" class="form-select" asp-items="ViewBag.Programs">
                    <option value="">-- Select Program --</option>
                </select>
                <span asp-validation-for="ProgramId" class="text-danger"></span>
            </div>

            <div class="d-flex justify-content-start">
                <button type="submit" class="btn btn-success me-2">
                    <i class="bi bi-check-circle"></i> Register
                </button>
                <a asp-controller="Home" asp-action="Index" class="btn btn-secondary">
                    <i class="bi bi-arrow-left-circle"></i> Cancel
                </a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
